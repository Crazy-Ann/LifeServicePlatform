<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:gravity="center_vertical"
    android:orientation="vertical"
    tools:context=".ui.activity.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_15"
        android:layout_marginStart="@dimen/dp_15"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48">

            <EditText
                android:id="@+id/etAccount"
                style="@style/edit_content"
                android:hint="@string/account"
                android:inputType="text"
                android:maxLength="20"/>

            <ImageButton
                android:id="@+id/ibAccountEmpty"
                style="@style/edit_content_delete1"
                android:contentDescription="@null"/>
        </RelativeLayout>

        <include layout="@layout/view_line"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_15"
        android:layout_marginStart="@dimen/dp_15"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48">

            <EditText
                android:id="@+id/etPassword"
                style="@style/edit_content"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:maxLength="20"/>

            <ImageButton
                android:id="@+id/ibPasswordDisplay"
                android:layout_width="@dimen/dp_36"
                android:layout_height="@dimen/dp_36"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dp_10"
                android:background="@android:color/transparent"
                android:contentDescription="@null"
                android:padding="@dimen/dp_5"
                android:scaleType="centerCrop"
                android:src="@mipmap/icon_eye_on"/>

            <ImageButton
                android:id="@+id/ibPasswordEmpty"
                style="@style/edit_content_delete2"
                android:layout_toStartOf="@id/ibPasswordDisplay"
                android:contentDescription="@null"/>

        </RelativeLayout>

        <include layout="@layout/view_line"/>
    </LinearLayout>

    <CheckBox
        android:id="@+id/cbRememberLoginInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_15"
        android:layout_marginStart="@dimen/dp_15"
        android:checked="true"
        android:padding="@dimen/dp_10"
        android:text="@string/remember_account"/>

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:layout_marginEnd="@dimen/dp_15"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@drawable/selector_login_button"
        android:gravity="center"
        android:text="@string/login"
        android:textColor="@android:color/white"
        android:textSize="@dimen/sp_16"/>

</LinearLayout>

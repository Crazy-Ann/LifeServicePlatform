<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/inToolbar"
        layout="@layout/view_toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inToolbar"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@android:color/white"
        android:orientation="vertical">

        <include
            layout="@layout/view_line"/>

        <RelativeLayout
            android:id="@+id/rlModifyPassword"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48"
            android:paddingStart="@dimen/dp_15">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:text="@string/modify_password"
                android:textColor="@color/color_000000"
                android:textSize="@dimen/sp_15"/>

            <ImageView
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:contentDescription="@null"
                android:src="@mipmap/icon_arrow_right"/>
        </RelativeLayout>

        <include layout="@layout/view_line"/>

        <RelativeLayout
            android:id="@+id/rlPageType"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48"
            android:paddingStart="@dimen/dp_15">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:text="@string/page_type"
                android:textColor="@color/color_000000"
                android:textSize="@dimen/sp_15"/>

            <TextView
                android:id="@+id/tvPageType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:gravity="center_vertical"
                android:text="@string/page_type"
                android:textColor="@color/color_000000"
                android:textSize="@dimen/sp_15"/>

        </RelativeLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/dp_15"
        android:background="@drawable/frame_fillet_f40046"
        android:gravity="center"
        android:text="@string/logout"
        android:textSize="@dimen/sp_16"/>

</RelativeLayout>
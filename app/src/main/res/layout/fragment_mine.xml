<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_220"
        android:background="@color/color_383857">

        <ImageView
            android:id="@+id/ivHeadImage"
            android:layout_width="@dimen/dp_64"
            android:layout_height="@dimen/dp_64"
            android:layout_centerInParent="true"
            android:contentDescription="@null"/>

        <TextView
            android:id="@+id/tvRealName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivHeadImage"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_15"
            android:maxLines="1"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp_18"/>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_15">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="vertical">

            <include layout="@layout/view_line"/>

            <LinearLayout
                android:id="@+id/llVolunteerContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <RelativeLayout
                    android:id="@+id/rlTask"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_48"
                    android:paddingStart="@dimen/dp_15">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:drawablePadding="@dimen/dp_15"
                        android:drawableStart="@mipmap/icon_task"
                        android:gravity="center_vertical"
                        android:text="@string/my_task"
                        android:textColor="@color/color_000000"
                        android:textSize="@dimen/sp_15"/>

                    <ImageView
                        android:layout_width="@dimen/dp_24"
                        android:layout_height="@dimen/dp_24"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="10dp"
                        android:contentDescription="@null"
                        android:src="@mipmap/icon_arrow_right"/>
                </RelativeLayout>

                <include layout="@layout/view_line"/>

                <RelativeLayout
                    android:id="@+id/rlAddWorkLog"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_48"
                    android:paddingStart="@dimen/dp_15">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:drawablePadding="@dimen/dp_15"
                        android:drawableStart="@mipmap/icon_task"
                        android:gravity="center_vertical"
                        android:text="@string/add_work_log"
                        android:textColor="@color/color_000000"
                        android:textSize="@dimen/sp_15"/>

                    <ImageView
                        android:layout_width="@dimen/dp_24"
                        android:layout_height="@dimen/dp_24"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="10dp"
                        android:contentDescription="@null"
                        android:src="@mipmap/icon_arrow_right"/>
                </RelativeLayout>

                <include layout="@layout/view_line"/>

                <RelativeLayout
                    android:id="@+id/rlMapEvent"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_48"
                    android:paddingStart="@dimen/dp_15">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:drawablePadding="@dimen/dp_15"
                        android:drawableStart="@mipmap/icon_task"
                        android:gravity="center_vertical"
                        android:text="@string/map_event"
                        android:textColor="@color/color_000000"
                        android:textSize="@dimen/sp_15"/>

                    <ImageView
                        android:layout_width="@dimen/dp_24"
                        android:layout_height="@dimen/dp_24"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="10dp"
                        android:contentDescription="@null"
                        android:src="@mipmap/icon_arrow_right"/>
                </RelativeLayout>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rlGreetingCard"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48"
                android:paddingStart="@dimen/dp_15"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawablePadding="@dimen/dp_15"
                    android:drawableStart="@mipmap/icon_greeting_card"
                    android:gravity="center_vertical"
                    android:text="@string/my_greeting_card"
                    android:textColor="@color/color_000000"
                    android:textSize="@dimen/sp_15"/>

                <ImageView
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"
                    android:contentDescription="@null"
                    android:src="@mipmap/icon_arrow_right"/>
            </RelativeLayout>

            <include layout="@layout/view_line"/>

            <RelativeLayout
                android:id="@+id/rlSetting"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48"
                android:paddingStart="@dimen/dp_15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawablePadding="@dimen/dp_15"
                    android:drawableStart="@mipmap/icon_setting"
                    android:gravity="center_vertical"
                    android:text="@string/setting"
                    android:textColor="@color/color_000000"
                    android:textSize="@dimen/sp_15"/>

                <ImageView
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"
                    android:contentDescription="@null"
                    android:src="@mipmap/icon_arrow_right"/>
            </RelativeLayout>

            <include layout="@layout/view_line"/>

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/dp_15"
        android:background="@drawable/frame_fillet_e4e4e4"
        android:gravity="center"
        android:text="@string/logout"
        android:textSize="@dimen/sp_16"/>

</LinearLayout>
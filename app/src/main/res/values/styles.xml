<resources>

    <style name="edit_content">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:paddingStart">@dimen/dp_15</item>
        <item name="android:paddingEnd">@dimen/dp_15</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@null</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="edit_content_delete1">
        <item name="android:layout_width">@dimen/dp_24</item>
        <item name="android:layout_height">@dimen/dp_24</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:scaleType">center</item>
        <item name="android:layout_marginStart">@dimen/dp_10</item>
        <item name="android:layout_marginEnd">@dimen/dp_10</item>
        <item name="android:background">@mipmap/icon_delete</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="edit_content_delete2">
        <item name="android:layout_width">@dimen/dp_24</item>
        <item name="android:layout_height">@dimen/dp_24</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_marginEnd">@dimen/dp_10</item>
        <item name="android:background">@mipmap/icon_delete</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="Animation_Push_Bottom" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>

    <style name="Animation_Push_Right" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/slide_right_in</item>
        <item name="android:windowExitAnimation">@anim/slide_right_out</item>
    </style>

    <style name="Animation_Push_Half_Right" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/slide_right_half_in</item>
        <item name="android:windowExitAnimation">@anim/slide_right_half_out</item>
    </style>
</resources>
